<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="12dp"
    tools:context=".ui.SucessActivity">

    <TextView
        android:id="@+id/textViewCongralations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/sucess_address_register"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/data"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textViewCongralations"
        app:layout_constraintTop_toBottomOf="@id/textViewCongralations" />


    <View
        android:id="@+id/viewReceptedData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewData" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:elevation="1dp"
        android:text="Nome: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/viewReceptedData"
        app:layout_constraintTop_toTopOf="@id/viewReceptedData" />

    <TextView
        android:id="@+id/textViewCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Telefone: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewName"
        app:layout_constraintTop_toBottomOf="@id/textViewName" />

    <TextView
        android:id="@+id/textViewCep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Cep: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewCell"
        app:layout_constraintTop_toBottomOf="@id/textViewCell" />

    <TextView
        android:id="@+id/textViewLogradouro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Logradouro: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewCep"
        app:layout_constraintTop_toBottomOf="@id/textViewCep" />


    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="NÃºmero: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewLogradouro"
        app:layout_constraintTop_toBottomOf="@id/textViewLogradouro" />


    <TextView
        android:id="@+id/textViewBairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Bairro: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewNumber"
        app:layout_constraintTop_toBottomOf="@id/textViewNumber" />

    <TextView
        android:id="@+id/textViewComplements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Complemento: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewBairro"
        app:layout_constraintTop_toBottomOf="@id/textViewBairro" />

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Cidade: "
        android:textColor="@color/aluradefault"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewComplements"
        app:layout_constraintTop_toBottomOf="@id/textViewComplements" />





</androidx.constraintlayout.widget.ConstraintLayout>